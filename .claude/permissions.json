{
  "permissions": {
    "allow": [
      "Bash(docker-compose up -d)",
      "Bash(docker-compose down)",
      "Bash(docker-compose run --rm web rails generate:*)",
      "Bash(docker-compose run --rm web rails db:*)",
      "Bash(docker-compose run --rm web bundle install)",
      "Bash(docker-compose run --rm web rails console)",
      "Bash(docker-compose run --rm web rspec)",
      "Bash(docker-compose run --rm web rails routes)",
      "Bash(docker-compose logs web)",
      "Bash(git add *)",
      "Bash(git commit -m *)",
      "Bash(git push origin *)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(sudo *)",
      "Bash(docker system prune *)",
      "Bash(docker-compose down -v)"
    ]
  },
  "project_context": {
    "name": "EventPay Manager",
    "description": "初学者向けイベント管理・決済システム",
    "tech_stack": "Ruby 3.3.0 + Rails 8.x + PostgreSQL + Docker",
    "development_style": "学習重視・シンプル実装",
    "docker_commands": {
      "start": "docker-compose up",
      "console": "docker-compose run --rm web rails console",
      "generate": "docker-compose run --rm web rails generate",
      "migrate": "docker-compose run --rm web rails db:migrate",
      "test": "docker-compose run --rm web rspec"
    }
  }
}
